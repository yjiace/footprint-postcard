<!--pages/profile/profile.wxml-->
<custom-navbar title="我的" background="transparent"></custom-navbar>

<view class="page-container">
  <!-- 顶部标题 -->
  <view class="header">
    <text class="page-title">个人中心</text>
  </view>

  <scroll-view class="content-scroll" scroll-y>
    <!-- 用户信息卡片 -->
    <view class="user-card" bindtap="onLoginAreaTap">
      <view class="user-avatar">
        <image 
          class="avatar-image" 
          src="{{isLoggedIn ? userInfo.avatarUrl : '/images/logo.png'}}" 
          mode="aspectFill"
        ></image>
      </view>
      <view class="user-info">
        <text class="user-name">{{userInfo.nickName || '欢迎, 旅行者'}}</text>
        <text class="user-desc">{{isLoggedIn ? '已登录' : '点击登录/注册'}}</text>
      </view>
      <view wx:if="{{!isLoggedIn}}" class="icon menu-arrow" style="background-image: url('data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 24 24\" fill=\"white\"><path d=\"M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z\"/></svg>');"></view>
    </view>

    <!-- 系统设置 -->
    <view class="menu-section">
      <view class="menu-card">
        <view class="menu-item" bindtap="onMenuTap" data-type="settings">
          <view class="icon menu-icon" style="background-image: url('data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 24 24\" fill=\"white\"><path d=\"M19.14 12.94c.04-.3.06-.61.06-.94 0-.32-.02-.64-.07-.94l2.03-1.58c.18-.14.23-.41.12-.61l-1.92-3.32c-.12-.22-.37-.29-.59-.22l-2.39.96c-.5-.38-1.03-.7-1.62-.94l-.36-2.54c-.04-.24-.24-.41-.48-.41h-3.84c-.24 0-.43.17-.47.41l-.36 2.54c-.59.24-1.13.57-1.62.94l-2.39-.96c-.22-.08-.47 0-.59.22L2.74 8.87c-.12.21-.08.47.12.61l2.03 1.58c-.05.3-.09.63-.09.94s.02.64.07.94l-2.03 1.58c-.18.14-.23.41-.12.61l1.92 3.32c.12.22.37.29.59.22l2.39-.96c.5.38 1.03.7 1.62.94l.36 2.54c.05.24.24.41.48.41h3.84c.24 0 .44-.17.47-.41l.36-2.54c.59-.24 1.13-.56 1.62-.94l2.39.96c.22.08.47 0 .59-.22l1.92-3.32c.12-.22.07-.47-.12-.61l-2.01-1.58zM12 15.6c-1.98 0-3.6-1.62-3.6-3.6s1.62-3.6 3.6-3.6 3.6 1.62 3.6 3.6-1.62 3.6-3.6 3.6z\"/></svg>');"></view>
          <text class="menu-text">设置</text>
          <view class="icon menu-arrow" style="background-image: url('data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 24 24\" fill=\"white\"><path d=\"M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z\"/></svg>');"></view>
        </view>
        <view class="menu-divider"></view>
        <view class="menu-item" bindtap="onMenuTap" data-type="about">
          <view class="icon menu-icon" style="background-image: url('data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 24 24\" fill=\"white\"><path d=\"M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z\"/></svg>');"></view>
          <text class="menu-text">关于我们</text>
          <view class="icon menu-arrow" style="background-image: url('data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 24 24\" fill=\"white\"><path d=\"M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z\"/></svg>');"></view>
        </view>
      </view>
    </view>

    <!-- 底部占位 -->
    <view class="bottom-placeholder"></view>
  </scroll-view>

  <!-- 退出登录 - 固定在页面底部 -->
  <view wx:if="{{isLoggedIn}}" class="logout-section">
    <view class="logout-card">
      <view class="logout-item" bindtap="logout">
        <view class="icon logout-icon" style="background-image: url('data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 24 24\" fill=\"white\"><path d=\"M17 7l-1.41 1.41L18.17 11H8v2h10.17l-2.58 2.58L17 17l5-5zM4 5h8V3H4c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h8v-2H4V5z\"/></svg>');"></view>
        <text class="logout-text">退出登录</text>
      </view>
    </view>
  </view>
</view>
