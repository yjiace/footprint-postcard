/* pages/profile/profile.wxss */
/* 基于HTML原型: from-amber-200 via-violet-400 to-sky-400 */

.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #fde68a 0%, #a78bfa 50%, #60a5fa 100%);
  color: #FFFFFF;
  display: flex;
  flex-direction: column;
  padding-top: 88rpx;
}

.header {
  width: 100%;
  padding: 32rpx 32rpx 32rpx;
  text-align: center;
  background-color: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
}

.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.content-scroll {
  flex: 1;
  padding: 0 32rpx;
}

.user-card {
  display: flex;
  align-items: center;
  gap: 32rpx;
  border-radius: 16rpx;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 40rpx;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
  backdrop-filter: blur(10rpx);
}

.user-card:active {
  background-color: rgba(255, 255, 255, 0.3);
}

.user-avatar {
  width: 128rpx;
  height: 128rpx;
  flex-shrink: 0;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
  min-width: 0;
}

.user-name {
  font-size: 36rpx;
  font-weight: 700;
  display: block;
}

.user-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
  margin-top: 8rpx;
}

.user-arrow {
  width: 48rpx;
  height: 48rpx;
  flex-shrink: 0;
  opacity: 0.7;
}

.menu-section {
  margin-top: 48rpx;
}

.menu-card {
  border-radius: 16rpx;
  background-color: rgba(255, 255, 255, 0.2);
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  backdrop-filter: blur(10rpx);
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  transition: all 0.3s;
}

.menu-item:active {
  background-color: rgba(255, 255, 255, 0.3);
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 32rpx;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
}

.menu-arrow {
  width: 48rpx;
  height: 48rpx;
  opacity: 0.7;
}

.menu-divider {
  height: 2rpx;
  background-color: rgba(255, 255, 255, 0.2);
  margin: 0 32rpx;
}

.bottom-placeholder {
  height: 120rpx;
}

/* 底部退出登录按钮样式 */
.logout-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx;
  background: transparent;
  z-index: 100;
}

.logout-card {
  border-radius: 16rpx;
  background-color: rgba(255, 255, 255, 0.2);
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  backdrop-filter: blur(10rpx);
}

.logout-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  background-color: transparent;
  transition: all 0.3s;
}

.logout-item:active {
  background-color: rgba(239, 68, 68, 0.1);
}

.logout-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.logout-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #ef4444;
}
