/* pages/plan-detail/plan-detail.wxss */
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFDEE9 0%, #B5FFFC 100%);
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding-bottom: env(safe-area-inset-bottom);
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: #666;
  font-size: 28rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #FF5722;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Header */
.header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(16px);
  -webkit-backdrop-filter: blur(16px);
}

.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 32rpx;
  height: 88rpx;
  box-sizing: border-box;
}

.nav-left, .nav-right {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1C1C1E;
  flex: 1;
  text-align: center;
}

.share-btn {
  background: transparent;
  padding: 0;
  margin: 0;
  line-height: 1;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-btn::after {
  border: none;
}

.icon-24 {
  width: 48rpx;
  height: 48rpx;
}

/* Tabs */
.tabs-wrapper {
  padding-bottom: 12rpx;
}

.tabs-scroll {
  display: flex;
  white-space: nowrap;
  width: 100%;
  border-bottom: 1rpx solid rgba(229, 231, 235, 0.5);
}

.tab-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx 0 12rpx;
  margin: 0 32rpx;
  border-bottom: 4rpx solid transparent;
  flex-shrink: 0;
}

.tab-item:first-child {
  margin-left: 32rpx;
}

.tab-item:last-child {
  margin-right: 32rpx;
}

.tab-item.active {
  border-bottom-color: #FF5722;
  color: #FF5722;
}

.tab-text {
  font-size: 28rpx;
  font-weight: bold;
}

/* Content */
.content-scroll {
  flex: 1;
  box-sizing: border-box;
}

.content-wrapper {
  padding: 32rpx;
  padding-bottom: 200rpx; /* Space for footer */
}

.card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(4px);
  -webkit-backdrop-filter: blur(4px);
  border-radius: 24rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.05);
  padding: 32rpx;
  overflow: hidden;
}

.card-header {
  margin-bottom: 32rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1C1C1E;
  display: block;
}

.timeline {
  display: flex;
  flex-direction: column;
}

.timeline-item {
  display: flex;
  flex-direction: row;
}

.timeline-left {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 32rpx;
  width: 64rpx;
  flex-shrink: 0;
}

.icon-circle {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
}

.bg-orange-100 {
  background-color: #ffedd5;
}

.text-orange-500 {
  color: #f97316;
}

.icon-20 {
  width: 40rpx;
  height: 40rpx;
}

.timeline-line {
  width: 2rpx;
  background-color: #e5e7eb;
  flex-grow: 1;
  min-height: 32rpx;
}

.timeline-content {
  flex: 1;
  padding-bottom: 48rpx;
  display: flex;
  flex-direction: column;
}

.timeline-item:last-child .timeline-content {
  padding-bottom: 0;
}

.item-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #1C1C1E;
  line-height: 1.4;
}

.item-time {
  font-size: 28rpx;
  color: #6b7280;
  margin-top: 8rpx;
  font-weight: normal;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
}

.tag {
  font-size: 24rpx;
  font-weight: 500;
  padding: 6rpx 20rpx;
  border-radius: 9999px;
}

.bg-gray-100 {
  background-color: #f3f4f6;
}

.text-gray-600 {
  color: #4b5563;
}

.bg-orange-100 {
  background-color: #ffedd5;
}

.text-orange-600 {
  color: #ea580c;
}

/* Footer */
.footer {
  position: fixed;
  bottom: 64rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  padding: 0 32rpx;
  z-index: 50;
  pointer-events: none;
}

.add-btn {
  pointer-events: auto;
  width: 100%;
  max-width: 600rpx;
  height: 112rpx;
  border-radius: 56rpx;
  background: linear-gradient(to right, #FF9A8B, #FF6A88);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  box-shadow: 0 10rpx 20rpx rgba(255, 106, 136, 0.3);
  border: none;
}

.add-btn::after {
  border: none;
}
