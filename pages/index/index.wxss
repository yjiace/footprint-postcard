/* pages/index/index.wxss */
/* 基于HTML原型: from-amber-200 via-violet-400 to-sky-400 */

.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #fde68a 0%, #a78bfa 50%, #60a5fa 100%);
}

.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #fde68a 0%, #a78bfa 50%, #60a5fa 100%);
  padding-top: 88rpx;
}

.top-bar {
  padding: 32rpx 32rpx 8rpx;
  background: transparent;
}

.location-badge {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  border-radius: 9999rpx;
  background-color: rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(10rpx);
}

.location-icon {
  font-size: 32rpx;
  color: #FFFFFF;
}

.location-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #FFFFFF;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 32rpx 8rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #FFFFFF;
  letter-spacing: -0.03rpx;
}

.section-more {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
}

/* 热门目的地 */
.destinations-container {
  padding: 0 32rpx;
}

.destinations-scroll {
  white-space: nowrap;
  -ms-scrollbar-style: none;
  scrollbar-width: none;
}

.destinations-scroll::-webkit-scrollbar {
  display: none;
}

.destinations-list {
  display: inline-flex;
  gap: 24rpx;
}

.destination-item {
  display: inline-flex;
  flex-direction: column;
  gap: 16rpx;
  border-radius: 16rpx;
  min-width: 560rpx;
  flex-shrink: 0;
}

.destination-image-wrapper {
  position: relative;
  width: 100%;
  aspect-ratio: 16/9;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.destination-image {
  width: 100%;
  height: 100%;
}

.destination-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
}

.destination-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
  letter-spacing: -0.03rpx;
}

/* 指示器 */
.indicators {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 0;
}

.indicator-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.5);
  transition: all 0.3s;
}

.indicator-dot.active {
  background-color: #FFFFFF;
}

/* 快捷功能 */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
  padding: 8rpx 32rpx 16rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.action-icon-wrapper {
  width: 96rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transition: all 0.3s;
}

.action-item:active .action-icon-wrapper {
  transform: scale(0.95);
  background-color: rgba(255, 255, 255, 0.4);
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
  color: #FFFFFF;
}

.action-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #FFFFFF;
  letter-spacing: -0.03rpx;
}

/* 周边景点 */
.attractions-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 0 32rpx;
}

.attraction-item {
  display: flex;
  gap: 32rpx;
  background-color: rgba(255, 255, 255, 0.3);
  padding: 24rpx;
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s;
}

.attraction-item:active {
  transform: scale(0.98);
  background-color: rgba(255, 255, 255, 0.4);
}

.attraction-image {
  width: 192rpx;
  height: 192rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
}

.attraction-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 8rpx;
  min-width: 0;
}

.attraction-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: -0.03rpx;
}

.attraction-tags {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 400;
  line-height: 1.5;
}

.attraction-distance {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 400;
  line-height: 1.5;
}

.bottom-placeholder {
  height: 40rpx;
}
