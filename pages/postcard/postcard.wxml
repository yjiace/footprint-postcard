<!--pages/postcard/postcard.wxml-->
<custom-navbar title="明信片" background="transparent"></custom-navbar>

<view class="page-container">
  <scroll-view class="content-scroll" scroll-y>
    <!-- 顶部导航 -->
    <view class="top-nav">
      <text class="nav-title">明信片列表</text>
    </view>

    <!-- 明信片网格 -->
    <view class="postcard-grid" wx:if="{{postcardList.length > 0}}">
      <view 
        class="postcard-item"
        wx:for="{{postcardList}}"
        wx:key="id"
        bindtap="onPostcardTap"
        data-item="{{item}}"
      >
        <image class="postcard-image" src="{{item.image}}" mode="aspectFill"></image>
        <text class="postcard-title">{{item.title}}</text>
      </view>
    </view>

    <!-- 空状态 -->
    <view class="empty-state" wx:if="{{postcardList.length === 0}}">
      <view class="icon empty-icon" style="width: 48px; height: 48px; background-image: url('data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 24 24\" fill=\"white\"><path d=\"M21.41 11.58l-9-9C12.05 2.22 11.55 2 11 2H4c-1.1 0-2 .9-2 2v7c0 .55.22 1.05.59 1.42l9 9c.36.36.86.58 1.41.58.55 0 1.05-.22 1.41-.59l7-7c.37-.36.59-.86.59-1.41 0-.55-.23-1.06-.59-1.42zM5.5 7C4.67 7 4 6.33 4 5.5S4.67 4 5.5 4 7 4.67 7 5.5 6.33 7 5.5 7z\"/></svg>');"></view>
      <text class="empty-title">还没有明信片</text>
      <text class="empty-desc">完成一次旅行后,生成你的专属明信片</text>
    </view>

    <!-- 底部占位 -->
    <view class="bottom-placeholder"></view>
  </scroll-view>
</view>
