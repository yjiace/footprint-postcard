/* pages/login/login.wxss */
page {
  height: 100%;
  background: linear-gradient(135deg, #fbbf24 0%, #8b5cf6 50%, #60a5fa 100%);
}

.login-container {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(135deg, #fbbf24 0%, #8b5cf6 50%, #60a5fa 100%);
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 返回按钮 */
.back-section {
  width: 100%;
  padding: 32rpx 48rpx;
  padding-top: calc(32rpx + env(safe-area-inset-top));
  position: relative;
  z-index: 100;
}

.back-btn {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 48rpx;
  backdrop-filter: blur(20rpx);
  width: fit-content;
  transition: all 0.3s;
  margin-top: env(safe-area-inset-top);
}

.back-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

.back-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.back-text {
  font-size: 28rpx;
  color: white;
}

.login-content {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 100rpx 0 0 0;
}

/* 头像 */
.avatar {
  margin-bottom: 32rpx;
}

.avatar-bg {
  width: 192rpx;
  height: 192rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(20rpx);
  overflow: hidden;
}

.avatar-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.avatar-icon {
  font-size: 120rpx;
}

/* 标题 */
.title-section {
  margin-bottom: 96rpx;
  padding: 0 60rpx;
  width: 100%;
  box-sizing: border-box;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
  display: block;
  padding: 0 20rpx;
}

/* 按钮 */
.button-section {
  width: 100%;
  padding: 0 60rpx;
  box-sizing: border-box;
}

.login-btn {
  width: 100% !important;
  height: 112rpx;
  background: #07C160;
  color: white;
  border: none;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
  box-shadow: 0 16rpx 48rpx rgba(7, 193, 96, 0.4);
  transition: all 0.3s;
  padding: 0 !important;
  margin: 0;
  white-space: nowrap;
  line-height: normal;
}

.login-btn::after {
  border: none;
}

.login-btn.disabled {
  opacity: 0.5;
  background: #07C160;
}

.login-btn:active:not(.disabled) {
  transform: scale(0.98);
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
}

.btn-icon {
  font-size: 48rpx;
}

/* 底部协议 */
.footer {
  width: 100%;
  padding: 32rpx 48rpx;
  padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
  display: flex;
  justify-content: center;
}

checkbox-group {
  display: inline-block;
}

.agreement-label {
  display: flex;
  align-items: center;
  justify-content: center;
}

checkbox {
  margin-right: 16rpx;
  transform: scale(0.9);
  flex-shrink: 0;
  min-width: 40rpx;
  min-height: 40rpx;
}

/* 自定义checkbox样式 */
checkbox .wx-checkbox-input {
  border-radius: 8rpx !important;
  width: 40rpx !important;
  height: 40rpx !important;
  border: 2rpx solid rgba(255, 255, 255, 0.8) !important;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #ffffff !important;
  border-color: #ffffff !important;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 8rpx !important;
  width: 40rpx !important;
  height: 40rpx !important;
  line-height: 40rpx !important;
  text-align: center !important;
  font-size: 32rpx !important;
  color: #07C160 !important;
  background: transparent !important;
  transform: translate(-50%, -50%) scale(1) !important;
}

.agreement-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.4;
  max-width: 520rpx;
  white-space: nowrap;
}

.link {
  color: white;
  text-decoration: underline;
}